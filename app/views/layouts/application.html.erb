<!DOCTYPE html>
<html>
<head>
  <title>Blottrapp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class='navbar navbar-default'>
    <ul class="nav navbar-nav navbar">
      <li><%= link_to "Return to Home", schools_path, class: "btn btn-info" %></li>
      <% unless signed_in? %>
        <li> <%= link_to "Sign In", sign_in_path, class: "btn btn-success" %> </li>
        <li> <%= link_to "Sign Up", new_user_path, class: "btn btn-warning" %> </li>
      <% else %>
        <li> <%= link_to "Sign Out", sign_out_path, method: :DELETE, class: "btn btn-danger" %> </li>
      <% end %>
    </ul>
  </nav>

  <div class='container'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>

    <%= yield %>
  </div>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
